<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit: <%= editBlog.title %></div>
    <form class="ui form" action="/blog/<%= editBlog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="editBlog[title]" value="<%= editBlog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="editBlog[image]" value="<%= editBlog.image %>">
        </div>
        <div class="field">
            <label>More Info</label>
            <textarea name="editBlog[body]" placeholder="Describe"><%= editBlog.body %></textarea>
        </div>
        <input class="ui purple basic button" type="submit"> 
    </form>
</div>

<% include ./partials/footer %>